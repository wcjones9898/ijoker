<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_marginBottom="20px"
    android:gravity="top|center_horizontal"
    android:background="#00000000">
	
	<LinearLayout android:gravity="top|center_horizontal"
		android:layout_width="wrap_content"	
		android:layout_height="wrap_content">
		
		<LinearLayout android:layout_height="fill_parent"
			android:layout_width="40px" android:gravity="center">
			
			<ImageButton 
				android:id="@+id/left_btn"
				android:background="@xml/leftfunc"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		<LinearLayout android:layout_height="fill_parent"
			android:layout_width="wrap_content" android:gravity="center">	
			
			<ImageView 
				android:id="@+id/cartoon_img"
				android:src="@drawable/gallery_start"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>	
		
		<LinearLayout android:layout_height="fill_parent"
			android:layout_width="40px" android:gravity="center">
			<ImageButton 
				android:id="@+id/right_btn"
				android:background="@xml/rightfunc"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content"/>
		</LinearLayout>
	
	</LinearLayout>
		
</LinearLayout>
