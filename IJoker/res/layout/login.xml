<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg_main">
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/content_pad">
	
	<AbsoluteLayout 		
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_marginTop="160px"
		android:layout_marginLeft="65px"
		android:layout_marginRight="65px">   	
    
    	
		<TextView  
			android:layout_y="0px"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 	
		    android:textColor="#ffffff"	 		    
		    android:text="用户名"/>
		    
		<EditText android:id="@+id/username"
			android:layout_y="20px"
		    android:layout_width="fill_parent"
		    android:layout_height="40px"		    
		    android:text=""		  
		    android:textSize="14sp"
		    android:typeface="normal"
		    android:textStyle="normal"		    
		    android:password="false"   		   
		    android:autoText="false"
		    android:capitalize="sentences"/>
		    
		<TextView  
			android:layout_y="60px"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 		    
		    android:text="密码"
		    android:textColor="#ffffffff"
		    android:textSize="14sp"/>
		    
		<EditText android:id="@+id/password"
			android:layout_y="80px"
		    android:layout_width="fill_parent"
		    android:layout_height="40px"		    
		    android:text=""	
		    android:password="true" 
		    android:autoText="false"
		    android:capitalize="sentences"/>	 
	
	
	<CheckBox android:id="@+id/rempw_cbx" 	
		android:layout_y="120px" 
		android:text="记住密码" 			
		android:textSize="13sp"	
		android:layout_width="wrap_content" 	
		android:layout_height="wrap_content"/>
		
	<CheckBox android:layout_y="120px"
		android:layout_x="90px" 		 
		android:text="自动登录" 
		android:id="@+id/autologin_cbx" 	
		android:textSize="13sp"	
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	
	<Button android:id="@+id/login_btn" 
		android:layout_y="165px" 
		android:layout_x="45px" 
		android:layout_width="100px" 				
		android:text="登录" 
		android:textSize="18px"	
		android:shadowRadius="0"	
		android:layout_height="wrap_content"/>
</AbsoluteLayout>
</LinearLayout>
</LinearLayout>
