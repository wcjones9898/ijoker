<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg_main">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@drawable/content_pad">

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_marginTop="150px"
			android:layout_marginLeft="65px" android:layout_marginRight="65px">


			<TextView android:id="@+id/usernamelabel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				style="@style/ShadowLabel" android:text="用户名" />

			<EditText android:id="@+id/username" android:layout_below="@id/usernamelabel"
				android:layout_width="fill_parent" android:layout_height="40px"
				android:text="" android:textSize="14sp" android:password="false" />
			<TextView android:id="@+id/passwordlabel"
				android:layout_below="@id/username" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="密码"
				style="@style/ShadowLabel" />
			<EditText android:id="@+id/password" android:layout_below="@id/passwordlabel"
				android:layout_width="fill_parent" android:layout_height="40px"
				android:password="true" />

			<TextView android:id="@+id/repeatPasswordlabel"
				android:layout_below="@id/password" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="再次输入密码"
				style="@style/ShadowLabel" />
			<EditText android:id="@+id/repeatPassword"
				android:layout_below="@id/repeatPasswordlabel" android:layout_width="fill_parent"
				android:layout_height="40px" android:password="true" />

			<RelativeLayout android:layout_below="@id/repeatPassword"
				android:gravity="center" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<Button android:id="@+id/register_btn" android:text="注册"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					style="@style/LongButton" />
			</RelativeLayout>


		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
