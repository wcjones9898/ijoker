<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg_main">
	
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/content_pad">
	
	<RelativeLayout 		
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_marginTop="160px"
		android:layout_marginLeft="65px"
		android:layout_marginRight="65px">   	
    
    	
		<TextView  
			android:id="@+id/usernametxt"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 	
		    style="@style/ShadowLabel" 		    
		    android:text="用户名"/>
		    
		<EditText android:id="@+id/username"
			android:layout_below="@id/usernametxt"
		    android:layout_width="fill_parent"
		    android:layout_height="40px"		    
		    android:text=""		  
		    android:textSize="14sp"
		    android:typeface="normal"
		    android:textStyle="normal"		    
		    android:password="false"   		   
		    android:autoText="false"
		    android:capitalize="sentences"/>
		    
		<TextView  
			android:id="@+id/passwordtxt"
			android:layout_below="@id/username"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 		    
		    android:text="密码"
		    style="@style/ShadowLabel"/>
		    
		<EditText android:id="@+id/password"
			android:layout_below="@id/passwordtxt"
		    android:layout_width="fill_parent"
		    android:layout_height="40px"		    
		    android:text=""	
		    android:password="true" 
		    android:autoText="false"
		    android:capitalize="sentences"/>	 
	
	
		<CheckBox android:id="@+id/rempw_cbx" 	
			android:layout_below="@id/password"
			android:text="记住密码" 			
			android:textSize="13sp"
			style="@style/ShadowLabel" 		
			android:layout_width="wrap_content" 	
			android:layout_height="wrap_content"/>
			
		
		<CheckBox android:id="@+id/autologin_cbx" 	 
			android:text="自动登录" 
			android:layout_below="@id/password"
			android:layout_toRightOf="@id/rempw_cbx"	
			android:textSize="13sp"	
			style="@style/ShadowLabel" 	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	
		<Button android:id="@+id/login_btn" 
			android:layout_below="@id/rempw_cbx"
			android:layout_width="95px" 				
			android:text="登录" 
			android:textSize="18px"			
			android:layout_height="wrap_content"/>
		
		<Button android:id="@+id/register_btn" 
			android:layout_below="@id/rempw_cbx"
			android:layout_toRightOf="@id/login_btn"
			android:layout_width="95px" 				
			android:text="注册" 
			android:textSize="18px"	
			android:shadowRadius="0"	
			android:textColorHighlight="#666666"
			android:layout_height="wrap_content"/>
	

</RelativeLayout>
</RelativeLayout>
</RelativeLayout>
