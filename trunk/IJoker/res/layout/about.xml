<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ad="http://schemas.android.com/apk/res/cn.edu.xmu.software.ijoker" 
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg_player"
	android:gravity="center">

	
	<RelativeLayout 
		android:gravity="center_horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:background="@drawable/division_pad">
		
		
		<RelativeLayout 
			android:id="@+id/labelPad"
			android:layout_width="fill_parent"			
			android:layout_height="wrap_content" 
			android:layout_marginTop="90px"
			android:layout_marginLeft="65px" 
			android:layout_marginRight="65px"
			android:gravity="left">
			
			<TextView android:id="@+id/searchLabel"
				android:text="关于iJoker" 
				android:textSize="25px"
				android:shadowColor="#FFFFFF"
				android:textColor="#000000"
				android:layout_width="fill_parent" 
				android:layout_height="50px"
				android:gravity="bottom"/>

		</RelativeLayout>
		
		<RelativeLayout 
			android:id="@+id/describePad"
			android:layout_below="@id/labelPad"
			android:layout_width="fill_parent"			
			android:layout_height="fill_parent" 
			android:layout_marginTop="22px"			
			android:layout_marginLeft="57px" 
			android:layout_marginRight="61px"
			android:layout_marginBottom="50px"
			android:gravity="center">
		
			<TextView  		
				android:id="@+id/describe_txt"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 	
			    android:textColor="#ffffffff"	    
			    android:text="iJoker是个好软件！"
			    android:textSize="22px"/>
		</RelativeLayout>
		
		<RelativeLayout 
			android:layout_below="@id/describePad"
			android:layout_height="fill_parent" 				
			android:layout_width="fill_parent">
			
			<com.admob.android.ads.AdView  
	          android:id="@+id/ad"          
	          android:layout_width="fill_parent" 
	          android:layout_height="wrap_content"
	          android:layout_alignParentBottom="true"
	          ad:backgroundColor="#000000"          
	          ad:keywords="Android game"	        
	        />
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>



