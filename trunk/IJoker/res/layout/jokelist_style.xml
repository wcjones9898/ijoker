<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/RelativeLayout01" 
	android:layout_width="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="wrap_content" 
	android:paddingBottom="4dip" 
	android:paddingLeft="12dip"
	android:paddingRight="12dip">
	
	<RelativeLayout 
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:gravity="center_vertical">
		
		
		<TextView 
			android:id="@+id/likeLabel"
			android:paddingTop="12dip"
			android:text="♥喜欢 "			
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/ShadowLabel"/>
		<TextView 
			android:id="@+id/likeNum"
			android:paddingTop="12dip"		
			android:layout_toRightOf="@id/likeLabel"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/ShadowLabel"/> 
	</RelativeLayout>


	<TextView
		android:id="@+id/jokeTitle" 
	    android:text="jokeTitle" 
	    android:layout_height="wrap_content" 
	    android:textSize="20dip" 
	    android:layout_width="fill_parent"
	    style="@style/ShadowLabel"/>
	    
	<TextView 
		android:id="@+id/joker"
		android:text="TextView02" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_below="@+id/jokeTitle"
		style="@style/ShadowLabel"/>
		
	<TextView 
		android:id="@+id/uploadTime"
		android:layout_below="@+id/jokeTitle"
		android:layout_toRightOf="@id/joker"
		android:layout_alignParentRight="true"
		android:text="TextView03" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		style="@style/ShadowLabel"/>
</RelativeLayout>