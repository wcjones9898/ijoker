<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.objectFactory" value="spring"/>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple"></constant>
	<constant name="struts.i18n.encoding" value="UTF-8" /> 
    <constant name="struts.custom.i18n.resources" value="Messages"/>    
    
     
    <!-- 登录及注册页面的配置文件 -->
	<package name="login" namespace="" extends="struts-default">				
             
		<action name="LoginAction" class="LoginProxy">
			<result name="success" type="redirect">/admin/welcome.jsp</result>
			<result name="input">/login.jsp</result>
		
		</action>
		<action name="RandomAction"	class="cn.edu.xmu.software.ijoke.action.RandomAction">
			<result type="stream">
 		 	<param name="contentType">image/jpeg</param>
  			<param name="inputName">inputStream</param>
  			<param name="bufferSize">1024</param>
			</result>
			</action>
	</package>
	
	<!--受权限控制的Action请求配置-->   
	<package name="admin" namespace="/admin" extends="struts-default">   
		<interceptors>  			   
			<interceptor class="cn.edu.xmu.software.ijoke.interceptor.AuthorityInterceptor"  
				name="authority"/>
			<interceptor-stack name="mydefault">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="authority"/>   
			</interceptor-stack>   
		</interceptors>   	  
		<default-interceptor-ref name="mydefault" />
		<global-results>   
			<result name="login" type="redirect">/login.jsp</result>   
		</global-results> 
	
		<!-- 笑话列表 -->			
		<action name="JokeListAction" class="JokeListProxy">
			<result>joke_list.jsp</result>
		</action>
		<action name="LoadJokeForModify" class="JokeListProxy" method="loadJokeForModify">
			<result>joke_modify.jsp</result>
		</action>
		<action name="DeleteJoke" class="JokeListProxy" method="deleteJoke">
			<result type="redirectAction">JokeListAction</result>
		</action>
		<action name="ModifyJoke" class="JokeListProxy" method="modifyJoke">
			<result type="redirectAction">JokeListAction</result>
		</action>
		<action name="JokePrePage" class="JokeListProxy" method="prePage">
			<result type="redirectAction">JokeListAction</result>
		</action>
		<action name="JokeNextPage" class="JokeListProxy" method="nextPage">
			<result type="redirectAction">JokeListAction</result>
		</action>	
		
		<!-- 笑话审核 -->
		<action name="UnverifyListAction" class="UnverifyListProxy">
			<result>unverify_list.jsp</result>
		</action>
		<action name="LoadJokeForVerify" class="UnverifyListProxy" method="loadJokeForVerify">
			<result>joke_verify.jsp</result>
		</action>
		<action name="DeleteUnverifyJoke" class="UnverifyListProxy" method="deleteJoke">
			<result type="redirectAction">UnverifyListAction</result>
		</action>
		<action name="VerifyJoke" class="UnverifyListProxy" method="verifyJoke">
			<result type="redirectAction">UnverifyListAction</result>
		</action>
		<action name="UnverifyPrePage" class="UnverifyListProxy" method="prePage">
			<result type="redirectAction">UnverifyListAction</result>
		</action>
		<action name="UnverifyNextPage" class="UnverifyListProxy" method="nextPage">
			<result type="redirectAction">UnverifyListAction</result>
		</action>
		
		<!-- 分类管理 -->
		<action name="CatalogManageAction" class="CatalogManageProxy">
			<result>catalog_manage.jsp</result>
		</action>
		<action name="LoadCatalogForModify" class="CatalogManageProxy" method="loadCatalogForModify">
			<result>catalog_modify.jsp</result>
		</action>
		<action name="ModifyCatalog" class="CatalogManageProxy" method="modifyCatalog">
			<result type="redirectAction">CatalogManageAction</result>
		</action>
		<action name="DeleteCatalog" class="CatalogManageProxy" method="deleteCatalog">
			<result type="redirectAction">CatalogManageAction</result>
		</action>
		<action name="AddCatalog" class="CatalogManageProxy" method="addCatalog">
			<result type="redirectAction">CatalogManageAction</result>
		</action>
		<action name="CatalogPrePage" class="CatalogManageProxy" method="prePage">
			<result type="redirectAction">CatalogManageAction</result>
		</action>
		<action name="CatalogNextPage" class="CatalogManageProxy" method="nextPage">
			<result type="redirectAction">CatalogManageAction</result>
		</action>
				
		
		<!-- 用户列表 -->	
		<action name="UserListAction" class="UserListProxy">
			<result>user_list.jsp</result>
		</action>
		<action name="LoadLockedUser" class="UserListProxy" method="loadLockedUser">
			<result>user_locked_list.jsp</result>
		</action>
		<action name="LoadUserForDetail" class="UserListProxy" method="loadUserForDetail">
			<result>user_detail.jsp</result>
		</action>
		<action name="LockUser" class="UserListProxy" method="lockUser">
			<result type="redirectAction">UserListAction</result>
		</action>
		<action name="UnlockUser" class="UserListProxy" method="unlockUser">
			<result type="redirectAction">LoadLockedUser</result>
		</action>
		
		
		<!-- 上传笑话 -->
		<action name="JokeFileUploadAction" class="JokeFileUploadProxy">
			<result type="redirectAction">UnverifyListAction</result>
		</action>
		<action name="CartoonFileUploadAction" class="CartoonFileUploadProxy">					
			<result>cartoon_upload.jsp</result>
		</action>
	</package>
	
		
</struts>