<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName"
			value="com.mysql.jdbc.Driver">
		</property>
		<property name="url"
              value="jdbc:mysql://localhost:3306/ijokerdata?useUnicode=true&amp;characterEncoding=utf-8">
         </property>
		<property name="username" value="root"></property>
		<property name="password" value="123456"></property>
	</bean>
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
			
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQLDialect
				</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>
					cn/edu/xmu/software/ijoke/entity/JokeFile.hbm.xml
				</value>
				<value>
					cn/edu/xmu/software/ijoke/entity/ClassAndJokeFile.hbm.xml
				</value>
				<value>
					cn/edu/xmu/software/ijoke/entity/ClassItem.hbm.xml
				</value>
				<value>
					cn/edu/xmu/software/ijoke/entity/Joke.hbm.xml
				</value></list>
		</property>
	</bean>
<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
  <property name="sessionFactory">
  <ref bean="sessionFactory" /> 
  </property>
</bean>

<!-- DAO -->
	<bean id="JokeFileDAO"
		class="cn.edu.xmu.software.ijoke.dao.JokeFileDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="ClassAndJokeFileDAO"
		class="cn.edu.xmu.software.ijoke.dao.ClassAndJokeFileDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	
	<bean id="ClassItemDAO"
		class="cn.edu.xmu.software.ijoke.dao.ClassItemDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory"></ref>
		</property>
	</bean>
	<bean id="JokeDAO"
		class="cn.edu.xmu.software.ijoke.dao.JokeDAO">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	
	<!-- Service -->
	<bean id="LoginService" class="cn.edu.xmu.software.ijoke.serviceimpl.LoginServiceImpl">	
		
	</bean>
	
	<bean id="UploadJokeFileService"
		class="cn.edu.xmu.software.ijoke.serviceimpl.UploadJokeFileServiceImpl" abstract="false"
		lazy-init="default" autowire="default" dependency-check="default">
		<property name="jokeFileDAO">
			<ref bean="JokeFileDAO" />
		</property>
	</bean>
</beans>